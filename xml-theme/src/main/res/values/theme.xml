<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.Skylight" parent="Theme.Skylight.Light" />

  <style name="Theme.Skylight.Dark" parent="Base.V21.Theme.Skylight.Dark" />
  <style name="Theme.Skylight.Light" parent="Base.V21.Theme.Skylight.Light" />

  <style name="Theme.Skylight.Fullscreen" parent="Theme.Skylight.Light.Fullscreen" />

  <style name="Theme.Skylight.Dark.Fullscreen">
    <item name="android:statusBarColor">#00000000</item>
    <item name="android:navigationBarColor">#00000000</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">false</item>
  </style>
  <style name="Theme.Skylight.Light.Fullscreen">
    <item name="android:statusBarColor">#00ffffff</item>
    <item name="android:navigationBarColor">#00ffffff</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">false</item>
  </style>

  <!--region Base-->
  <style name="Base.V21.Theme.Skylight.Dark" parent="Theme.MaterialComponents.NoActionBar">
    <!--Color attributes -->
    <item name="colorPrimary">@color/skylight_amber_dark</item>
    <item name="colorPrimaryVariant">@color/skylight_amber</item>
    <item name="colorOnPrimary">#000000</item>

    <item name="colorSecondary">?colorPrimary</item>
    <item name="colorSecondaryVariant">?colorPrimaryVariant</item>
    <item name="colorOnSecondary">?colorOnPrimary</item>

    <item name="android:colorBackground">@color/skylight_darkPurple_dark</item>
    <item name="colorOnBackground">#ffffff</item>

    <item name="colorSurface">@color/skylight_darkPurple</item>
    <item name="colorOnSurface">#ffffff</item>

    <item name="colorError">@color/skylight_pink_light</item>
    <item name="colorOnError">#000000</item>

    <item name="preferredStatusBarColor">@color/skylight_statusBar_dark</item>
    <item name="preferredNavigationBarColor">@color/skylight_navigationBar_dark</item>

    <!--region Duplicated in dark and light themes-->
    <!--System bars-->
    <item name="android:statusBarColor">?preferredStatusBarColor</item>
    <item name="android:navigationBarColor">?preferredNavigationBarColor</item>

    <!--Shape attributes-->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skylight.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Skylight.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Skylight.LargeComponent</item>

    <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
    <item name="colorPrimaryDark">?colorPrimaryVariant</item>
    <item name="colorAccent">?colorSecondary</item>
    <!--endregion-->
  </style>

  <style name="Base.V21.Theme.Skylight.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!--Color attributes -->
    <item name="colorPrimary">@color/skylight_deepRed_dark</item>
    <item name="colorPrimaryVariant">@color/skylight_deepRed_extraDark</item>
    <item name="colorOnPrimary">#ffffff</item>

    <item name="colorSecondary">?colorPrimary</item>
    <item name="colorSecondaryVariant">?colorPrimaryVariant</item>
    <item name="colorOnSecondary">?colorOnPrimary</item>

    <item name="android:colorBackground">@color/skylight_amber_extraLight</item>
    <item name="colorOnBackground">#000000</item>

    <item name="colorSurface">@color/skylight_amber_light</item>
    <item name="colorOnSurface">#000000</item>

    <item name="colorError">@color/skylight_pink_dark</item>
    <item name="colorOnError">#ffffff</item>

    <item name="preferredStatusBarColor">@color/skylight_statusBar_light</item>
    <item name="preferredNavigationBarColor">@color/skylight_navigationBar_light</item>

    <!--region Duplicated in dark and light themes-->
    <!--System bars-->
    <item name="android:statusBarColor">?preferredStatusBarColor</item>
    <item name="android:navigationBarColor">?preferredNavigationBarColor</item>

    <!--Shape attributes-->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skylight.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Skylight.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Skylight.LargeComponent</item>

    <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
    <item name="colorPrimaryDark">?colorPrimaryVariant</item>
    <item name="colorAccent">?colorSecondary</item>
    <!--endregion-->
  </style>
  <!--endregion-->
</resources>
