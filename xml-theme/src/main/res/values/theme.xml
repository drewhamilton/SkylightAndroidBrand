<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Skylight.Fullscreen" parent="Theme.Skylight.Light.Fullscreen" />
  <style name="Theme.Skylight" parent="Theme.Skylight.Light" />

  <style name="Theme.Skylight.Light.Fullscreen">
    <item name="android:statusBarColor">#00ffffff</item>
    <item name="android:navigationBarColor">#00ffffff</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">false</item>
  </style>
  <style name="Theme.Skylight.Dark.Fullscreen">
    <item name="android:statusBarColor">#00000000</item>
    <item name="android:navigationBarColor">#00000000</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowTranslucentNavigation">false</item>
  </style>

  <style name="Theme.Skylight.Light" parent="Base.V21.Theme.Skylight.Light" />
  <style name="Theme.Skylight.Dark" parent="Base.V21.Theme.Skylight.Dark" />

  <style name="Base.V21.Theme.Skylight.Light" parent="Theme.Material3.Light.NoActionBar">
    <!--region Color palettes -->
    <item name="colorPrimary">@color/skylight_amber_40</item>
    <item name="colorOnPrimary">@color/skylight_amber_100</item>
    <item name="colorPrimaryInverse">@color/skylight_amber_80</item>
    <item name="colorPrimaryContainer">@color/skylight_amber_90</item>
    <item name="colorOnPrimaryContainer">@color/skylight_amber_10</item>

    <item name="colorSecondary">@color/skylight_purple_40</item>
    <item name="colorOnSecondary">@color/skylight_purple_100</item>
    <item name="colorSecondaryContainer">@color/skylight_purple_90</item>
    <item name="colorOnSecondaryContainer">@color/skylight_purple_10</item>

    <item name="colorTertiary">@color/skylight_amber_70</item>
    <item name="colorOnTertiary">@color/skylight_amber_10</item>
    <item name="colorTertiaryContainer">@color/skylight_amber_80</item>
    <item name="colorOnTertiaryContainer">@color/skylight_amber_10</item>

    <item name="android:colorBackground">@color/skylight_amber_99</item>
    <item name="colorOnBackground">@color/skylight_amber_10</item>

    <item name="colorSurface">@color/skylight_amber_99</item>
    <item name="colorOnSurface">@color/skylight_amber_10</item>
    <item name="colorSurfaceVariant">@color/skylight_neutralRose_95</item>
    <item name="colorOnSurfaceVariant">@color/skylight_neutralRose_30</item>
    <item name="colorSurfaceInverse">@color/skylight_amber_20</item>
    <item name="colorOnSurfaceInverse">@color/skylight_amber_95</item>
    <item name="colorOutline">@color/skylight_neutralRose_50</item>

    <item name="colorError">@color/skylight_pink_40</item>
    <item name="colorOnError">@color/skylight_pink_100</item>
    <item name="colorErrorContainer">@color/skylight_pink_90</item>
    <item name="colorOnErrorContainer">@color/skylight_pink_10</item>
    <!--endregion-->

    <!--region Text colors-->
    <item name="android:textColorSecondary">@color/skylight_light_secondary_text</item>
    <item name="android:textColorSecondaryInverse">@color/skylight_light_secondary_inverse_text</item>
    <item name="android:textColorTertiary">@color/skylight_light_secondary_text</item>
    <item name="android:textColorTertiaryInverse">@color/skylight_light_secondary_inverse_text</item>
    <item name="android:textColorHighlight">@color/skylight_light_highlighted_text</item>
    <item name="android:textColorHighlightInverse">@color/skylight_light_highlighted_inverse_text</item>
    <!--endregion-->

    <item name="elevationOverlayColor">?colorTertiary</item>

    <!--region Shape attributes-->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skylight.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Skylight.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Skylight.LargeComponent</item>
    <!--endregion-->

    <!--region Widget styles-->
    <item name="materialCardViewStyle">?materialCardViewFilledStyle</item>
    <!--endregion-->
  </style>

  <style name="Base.V21.Theme.Skylight.Dark" parent="Theme.Material3.Dark.NoActionBar">
    <!--region Color palettes -->
    <item name="colorPrimary">@color/skylight_purple_80</item>
    <item name="colorOnPrimary">@color/skylight_purple_20</item>
    <item name="colorPrimaryInverse">@color/skylight_purple_40</item>
    <item name="colorPrimaryContainer">@color/skylight_purple_30</item>
    <item name="colorOnPrimaryContainer">@color/skylight_purple_90</item>

    <item name="colorSecondary">@color/skylight_amber_80</item>
    <item name="colorOnSecondary">@color/skylight_amber_20</item>
    <item name="colorSecondaryContainer">@color/skylight_amber_30</item>
    <item name="colorOnSecondaryContainer">@color/skylight_amber_90</item>

    <item name="colorTertiary">@color/skylight_purple_70</item>
    <item name="colorOnTertiary">@color/skylight_purple_20</item>
    <item name="colorTertiaryContainer">@color/skylight_purple_40</item>
    <item name="colorOnTertiaryContainer">@color/skylight_purple_90</item>

    <item name="android:colorBackground">@color/skylight_purple_10</item>
    <item name="colorOnBackground">@color/skylight_purple_90</item>

    <item name="colorSurface">@color/skylight_purple_10</item>
    <item name="colorOnSurface">@color/skylight_purple_90</item>
    <item name="colorSurfaceVariant">@color/skylight_neutralPurple_30</item>
    <item name="colorOnSurfaceVariant">@color/skylight_neutralPurple_80</item>
    <item name="colorSurfaceInverse">@color/skylight_purple_90</item>
    <item name="colorOnSurfaceInverse">@color/skylight_purple_20</item>
    <item name="colorOutline">@color/skylight_neutralPurple_60</item>

    <item name="colorError">@color/skylight_pink_80</item>
    <item name="colorOnError">@color/skylight_pink_20</item>
    <item name="colorErrorContainer">@color/skylight_pink_30</item>
    <item name="colorOnErrorContainer">@color/skylight_pink_90</item>
    <!--endregion-->

    <!--region Text colors-->
    <item name="android:textColorSecondary">@color/skylight_dark_secondary_text</item>
    <item name="android:textColorSecondaryInverse">@color/skylight_dark_secondary_inverse_text</item>
    <item name="android:textColorTertiary">@color/skylight_dark_secondary_text</item>
    <item name="android:textColorTertiaryInverse">@color/skylight_dark_secondary_inverse_text</item>
    <item name="android:textColorHighlight">@color/skylight_dark_highlighted_text</item>
    <item name="android:textColorHighlightInverse">@color/skylight_dark_highlighted_inverse_text</item>
    <!--endregion-->

    <item name="android:statusBarColor">?colorOnSurfaceInverse</item>
    <item name="android:navigationBarColor">?colorOnSurfaceInverse</item>

    <item name="elevationOverlayColor">?colorTertiary</item>

    <!--region Shape attributes-->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skylight.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Skylight.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Skylight.LargeComponent</item>
    <!--endregion-->

    <!--region Widget styles-->
    <item name="materialCardViewStyle">?materialCardViewFilledStyle</item>
    <!--endregion-->
  </style>

</resources>
