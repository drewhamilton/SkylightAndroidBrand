<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"

    tools:parentTag="dev.drewhamilton.skylight.android.brand.demo.Banner">

  <!--region Background-->
  <View
      android:id="@+id/bannerBackground"
      android:layout_width="0dp"
      android:layout_height="0dp"

      android:background="?colorSurface"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/bannerDivider" />

  <View
      android:id="@+id/bannerDivider"
      android:layout_width="0dp"
      android:layout_height="1dp"

      android:alpha="0.12"
      android:background="?colorOnBackground"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bannerBackground"
      app:layout_constraintBottom_toTopOf="@+id/bannerSpace" />

  <Space
      android:id="@+id/bannerSpace"
      android:layout_width="0dp"
      android:layout_height="1dp"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bannerDivider"
      app:layout_constraintBottom_toBottomOf="parent" />
  <!--endregion-->

  <TextView
      android:id="@+id/bannerMessageView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"

      android:textAppearance="?textAppearanceBody1"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:firstBaselineToTopHeight="36dp"

      tools:text="This is the banner message." />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/primaryButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bannerMessageView"
      app:layout_constraintBottom_toBottomOf="parent"

      style="?buttonBarButtonStyle"

      tools:text="Try again" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/secondaryButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"

      app:layout_constraintEnd_toStartOf="@+id/primaryButton"
      app:layout_constraintTop_toTopOf="@+id/primaryButton"
      app:layout_constraintBottom_toBottomOf="@+id/primaryButton"

      style="?buttonBarButtonStyle"

      tools:text="Dismiss" />

</merge>
